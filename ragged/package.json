{
  "name": "ragged",
  "version": "0.0.1",
  "description": "A simple library for easy LLM access.",
  "main": "build/ragged.node.js",
  "browser": "build/ragged.browser.js",
  "types": "build/main.d.ts",
  "scripts": {
    "build": "pnpm build:clean && pnpm build:node && pnpm build:browser && pnpm build:module && pnpm build:tsc",
    "build:clean": "rm -rf ./build",
    "build:module": "esbuild main.ts --bundle --outfile=./build/ragged.module.js --platform=neutral --format=esm",
    "build:node": "esbuild main.ts --bundle --outfile=./build/ragged.node.js --platform=node",
    "build:browser": "esbuild main.ts --bundle --outfile=./build/ragged.browser.js --target=firefox70,safari12 --format=esm",
    "build:tsc": "tsc --emitDeclarationOnly",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "monarchwadia",
  "license": "MIT",
  "devDependencies": {
    "esbuild": "0.20.2",
    "openai": "^4.0.0",
    "rxjs": "^7.8.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/monarchwadia/ragged.git"
  },
  "bugs": {
    "url": "https://github.com/monarchwadia/ragged/issues"
  },
  "homepage": "https://github.com/monarchwadia/ragged#readme"
}